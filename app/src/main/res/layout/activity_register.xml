<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="10dp"
              android:background="@drawable/rectangle_border"
              android:orientation="vertical">


    <ScrollView
        android:id="@+id/scrl_register_first"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:scrollbars="none"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/lnr_register_first"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/tv_register_title1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/register"
                android:textColor="@color/black"
                android:textSize="@dimen/custom_food_font"/>

            <!-- first name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_section"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_firstName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/first_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_food_font"/>

                <EditText
                    android:id="@+id/et_firstName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/rectangle_border"
                    android:focusable="false"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_food_font"/>
            </LinearLayout>

            <!-- last name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_section"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/tv_lastName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/last_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_food_font"/>

                <EditText
                    android:id="@+id/et_lastName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/rectangle_border"
                    android:focusable="false"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_food_font"/>

            </LinearLayout>

            <!-- mobile number -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_section"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_mobileNo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/mobile_no"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_food_font"/>

                <EditText
                    android:id="@+id/et_mobileNo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/rectangle_border"
                    android:focusable="false"
                    android:hint="01XXXXXXXXX"
                    android:maxLength="11"
                    android:numeric="integer"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"

                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/dark_gray"
                    android:textSize="@dimen/custom_food_font"/>

            </LinearLayout>

            <!-- email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_section"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/email"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_food_font"/>

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/rectangle_border"
                    android:focusable="false"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_food_font"/>

            </LinearLayout>

            <!-- Password -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_section"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_password"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/password"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_food_font"/>

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/rectangle_border"
                    android:focusable="false"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_food_font"/>

            </LinearLayout>

            <!-- Confirm password -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_confirm_password"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/confirm_password"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_food_font"/>

                <EditText
                    android:id="@+id/et_register_confirm_password"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/register_section"
                    android:layout_weight="1.5"
                    android:background="@drawable/rectangle_border"
                    android:focusable="false"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_food_font"/>
            </LinearLayout>


            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_above="@+id/btn_back_login"
                android:layout_marginTop="50dp"
                android:background="@drawable/button_selected"
                android:gravity="center"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textSize="@dimen/custom_food_font"/>

            <Button
                android:id="@+id/btn_back_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_selected"
                android:gravity="center"
                android:text="@string/back"
                android:textAllCaps="false"
                android:textSize="@dimen/custom_food_font"/>


        </LinearLayout>


    </ScrollView>

    <ScrollView
        android:id="@+id/scrl_register_second"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/lnr_register_second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            >

            <TextView
                android:id="@+id/tv_register_title2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/register"
                android:textColor="@color/black"
                android:textSize="@dimen/custom_food_font"/>
            <!-- gender -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/gender"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_food_font"/>

                <RadioGroup
                    android:id="@+id/rgp_gender"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"

                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_male"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/male"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/rb_female"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="@string/female"
                        android:textColor="@color/black"/>

                </RadioGroup>

            </LinearLayout>

            <!-- age -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_section"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/age"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_food_font"/>

                <EditText
                    android:id="@+id/et_age"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_border"
                    android:focusable="false"
                    android:gravity="center"
                    android:maxLength="2"
                    android:numeric="integer"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_food_font"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"/>
            </LinearLayout>

            <!-- height -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_section"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_height"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/height"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_food_font"/>

                <EditText
                    android:id="@+id/et_height"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_border"
                    android:focusable="false"
                    android:gravity="center"
                    android:maxLength="5"
                    android:numeric="decimal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_food_font"/>

                <TextView
                    android:id="@+id/tv_cm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:text="@string/cm"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_food_font"/>
            </LinearLayout>

            <!-- Weight -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_section"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_weight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/weight"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_food_font"/>

                <EditText
                    android:id="@+id/et_weight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_border"
                    android:focusable="false"
                    android:gravity="center"
                    android:maxLength="5"
                    android:numeric="decimal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_food_font"/>

                <TextView
                    android:id="@+id/tv_gm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:text="@string/Kg"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_food_font"/>
            </LinearLayout>

            <!-- Exercise -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_exercise"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/exercise"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_food_font"/>

                <Spinner
                    android:id="@+id/spnr_exercise"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"

                    android:paddingLeft="10dp"/>

                <TextView
                    android:id="@+id/tv_perWeek"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/per_week"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_food_font"/>

            </LinearLayout>


            <Button
                android:id="@+id/btn_signIn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="50dp"
                android:background="@drawable/button_selected"
                android:gravity="center"
                android:text="@string/ready"
                android:textAllCaps="false"
                android:textSize="@dimen/custom_food_font"/>

            <Button
                android:id="@+id/btn_backTo_register"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_selected"
                android:gravity="center"
                android:text="@string/back"
                android:textAllCaps="false"
                android:textSize="@dimen/custom_food_font"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>