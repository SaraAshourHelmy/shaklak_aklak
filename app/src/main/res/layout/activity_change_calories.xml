<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

    <include
        android:id="@+id/actionbar_custom_calories"
        layout="@layout/actionbar_default"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_below="@+id/actionbar_custom_calories"
        android:background="@color/black"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_target_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/target_calories"
            android:textColor="@color/pink"
            android:textSize="17sp"/>

        <EditText
            android:id="@+id/et_target_calories"
            android:layout_width="200dp"
            android:layout_height="@dimen/register_section"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/rectangle_border"
            android:focusable="false"
            android:gravity="center"
            android:numeric="integer"
            android:textColor="@color/pink"
            android:textSize="17sp"/>

        <Button
            android:id="@+id/btn_change_calories"
            android:layout_width="200dp"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_selected"
            android:text="@string/change_calories"
            android:textAllCaps="false"
            android:textColor="@color/black"/>

    </LinearLayout>

</RelativeLayout>